<resources>
    <!-- Base Theme for KcikTV -->
    <style name="Theme.KcikTV" parent="Theme.Leanback">
        <item name="android:windowBackground">@color/midnight_indigo</item>
        <item name="android:colorPrimary">@color/kick_green</item>
        <item name="android:colorPrimaryDark">@color/kick_green_dark</item>
        <item name="android:colorAccent">@color/electric_cyan</item>
        <item name="defaultBrandColor">@color/electric_cyan</item>
        <item name="defaultBrandColorDark">@color/kick_green_dark</item>
    </style>

    <!-- Fullscreen Theme for Player -->
    <style name="Theme.KcikTV.Fullscreen">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <!-- Round Image Support -->
    <style name="CircleImage" parent="">
        <item name="cornerSize">50%</item>
    </style>
</resources>
