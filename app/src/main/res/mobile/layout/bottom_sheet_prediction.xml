<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_bottom_sheet"
    android:orientation="vertical"
    android:paddingBottom="24dp">

    <!-- Drag Handle -->
    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_handle_bar" />

    <!-- Header -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="@string/prediction_control"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/closeButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_close"
            app:tint="#FFFFFF" />
    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp">

            <!-- Prediction Title -->
            <TextView
                android:id="@+id/predictionTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="predictionTitle" />

            <TextView
                android:id="@+id/totalPointsInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:textColor="#808080"
                android:textSize="12sp"
                tools:text="totalPointsInfo" />

            <!-- Comparison Block -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="#121212"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="120dp">
                    
                    <!-- Ball Visualizer - Full Background -->
                    <FrameLayout
                        android:id="@+id/visualizerContainer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:alpha="0.5" />
                    
                    <!-- Content on top -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingTop="24dp"
                        android:paddingBottom="24dp"
                        android:paddingHorizontal="16dp">

                        <!-- Normal vs display -->
                        <LinearLayout
                            android:id="@+id/percentVsContainer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/percentLeft"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="100%"
                                android:textColor="#53FC18"
                                android:textSize="32sp"
                                android:textStyle="bold"
                                android:shadowColor="#000000"
                                android:shadowDx="2"
                                android:shadowDy="2"
                                android:shadowRadius="4" />

                            <TextView
                                android:id="@+id/vsText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="12dp"
                                android:text="@string/vs"
                                android:textColor="#FFFFFF"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:shadowColor="#000000"
                                android:shadowDx="2"
                                android:shadowDy="2"
                                android:shadowRadius="4" />

                            <TextView
                                android:id="@+id/percentRight"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="0%"
                                android:textColor="#FF4D4D"
                                android:textSize="32sp"
                                android:textStyle="bold"
                                android:shadowColor="#000000"
                                android:shadowDx="2"
                                android:shadowDy="2"
                                android:shadowRadius="4" />
                        </LinearLayout>
                    
                        <!-- Resolved Winner Display (shown instead of vs) -->
                        <LinearLayout
                            android:id="@+id/resolvedWinnerContainer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:visibility="gone"
                            tools:visibility="visible">
                        
                            <TextView
                                android:id="@+id/resolvedWinnerPercent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="100%"
                                android:textColor="#53FC18"
                                android:textSize="40sp"
                                android:textStyle="bold"
                                android:shadowColor="#000000"
                                android:shadowDx="2"
                                android:shadowDy="2"
                                android:shadowRadius="4" />
                            
                            <TextView
                                android:id="@+id/resolvedWinnerLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/winner_label"
                                android:textColor="#53FC18"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:shadowColor="#000000"
                                android:shadowDx="2"
                                android:shadowDy="2"
                                android:shadowRadius="4" />
                        </LinearLayout>
                    </LinearLayout>
                </FrameLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/options_title"
                android:textColor="#808080"
                android:textSize="14sp"
                android:textStyle="bold" />

            <!-- Options Container (Horizontal) -->
            <LinearLayout
                android:id="@+id/optionsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:baselineAligned="false">
                <!-- Items populated programmatically -->
            </LinearLayout>

            <!-- Status Text (Tahminler Kapandı, Kilitlendi, Sonuçlandı, İade Edildi) -->
            <TextView
                android:id="@+id/timerText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center"
                tools:text="timerText"
                android:textColor="#808080"
                android:textSize="14sp"
                android:textStyle="bold" />

            <!-- Moderator/Owner Action Buttons Container -->
            <LinearLayout
                android:id="@+id/modActionsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:visibility="gone"
                tools:visibility="visible">
                
                <!-- Delete Button -->
                <Button
                    android:id="@+id/btnDeletePrediction"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    android:backgroundTint="#2A2A2A"
                    app:cornerRadius="8dp"
                    android:text="@string/cancel"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:visibility="gone" />
                
                <!-- Lock Button (active state) -->
                <Button
                    android:id="@+id/btnLockPrediction"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    android:backgroundTint="#53FC18"
                    app:cornerRadius="8dp"
                    android:text="@string/lock_submissions"
                    android:textColor="#000000"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:visibility="gone" />
                
                <!-- Resolve Button (locked state) -->
                <Button
                    android:id="@+id/btnResolvePrediction"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    android:backgroundTint="#53FC18"
                    app:cornerRadius="8dp"
                    android:text="@string/select_result"
                    android:textColor="#000000"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- New Prediction Button (for cancelled/no prediction) -->
            <Button
                android:id="@+id/btnNewPredictionSecondary"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:backgroundTint="#53FC18"
                app:cornerRadius="8dp"
                android:text="@string/new_prediction_start"
                android:textColor="#000000"
                android:textStyle="bold"
                android:visibility="gone"
                tools:visibility="visible" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>
