<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_bottom_sheet"
    android:padding="16dp">

    <!-- Handle -->
    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_handle_bar" />

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/player_statistics"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- Stats Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="@drawable/bg_stats_container">

        <!-- Resolution -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/stat_resolution"
                android:textColor="#AAAAAA"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/statResolution"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="--"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- FPS -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/stat_fps"
                android:textColor="#AAAAAA"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/statFps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="--"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Bitrate -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/stat_bitrate"
                android:textColor="#AAAAAA"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/statBitrate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="--"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Latency -->
        <LinearLayout
            android:id="@+id/statLatencyRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/stat_latency"
                android:textColor="#AAAAAA"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/statLatency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="--"
                android:textColor="#53FC18"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Buffer -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/stat_buffer_health"
                android:textColor="#AAAAAA"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/statBuffer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="--"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Dropped Frames -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/stat_dropped_frames"
                android:textColor="#AAAAAA"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/statDroppedFrames"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="--"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Playback Rate -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/stat_playback_rate"
                android:textColor="#AAAAAA"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/statPlaybackRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="--"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Player State -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/stat_ready_state"
                android:textColor="#AAAAAA"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/statPlayerState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="--"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Volume -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/stat_volume"
                android:textColor="#AAAAAA"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/statVolume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="--"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <!-- Close Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCloseStats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/close"
        android:textColor="@android:color/black"
        app:backgroundTint="#53FC18"
        app:cornerRadius="8dp" />

</LinearLayout>
