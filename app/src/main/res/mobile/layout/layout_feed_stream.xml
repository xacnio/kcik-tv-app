<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:clipChildren="true"
    android:clipToPadding="true">

    <!-- Blurred Background Thumbnail (Full screen for visual effect) -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:alpha="0.6" />

    <!-- Content Wrapper - will be constrained on tablet/portrait -->
    <FrameLayout
        android:id="@+id/feedContentWrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:clipChildren="true"
        android:clipToPadding="true">

        <!-- Content Container -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="true"
            android:clipToPadding="true">

        <!-- Background for proper video display -->
        <View
            android:id="@+id/feedBackground"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#000000"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="@id/streamPreviewContainer"
            app:layout_constraintBottom_toBottomOf="@id/streamPreviewContainer"
            app:layout_constraintStart_toStartOf="@id/streamPreviewContainer"
            app:layout_constraintEnd_toEndOf="@id/streamPreviewContainer" />

        <!-- Stream Preview Container (Default: fit width, 16:9, top aligned with margin) -->
        <FrameLayout
            android:id="@+id/streamPreviewContainer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="64dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintDimensionRatio="H,16:9">

            <!-- TextureView for smoother feed playback (prevents black flickering) -->
            <TextureView
                android:id="@+id/feedPlayerTexture"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />

            <!-- Last Frame Image (shown when returning to a previously viewed stream) -->
            <ImageView
                android:id="@+id/lastFrameImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:visibility="gone" />

            <!-- Thumbnail (shown while loading) -->
            <ImageView
                android:id="@+id/streamThumbnail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="#1A1A1A" />

            <!-- Loading Spinner -->
            <ProgressBar
                android:id="@+id/feedLoadingSpinner"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:indeterminateTint="#53FC18"
                android:visibility="gone" />

            <!-- Play Icon Overlay (tap to go fullscreen) -->
            <FrameLayout
                android:id="@+id/playOverlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/playIcon"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_play"
                    app:tint="#FFFFFF"
                    android:alpha="0.9" />
            </FrameLayout>

            <!-- Mute/Unmute Indicator Overlay (visual feedback on tap) -->
            <ImageView
                android:id="@+id/visualMuteIndicator"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_circle_dark"
                android:padding="16dp"
                android:alpha="0"
                android:visibility="gone"
                android:src="@drawable/ic_volume_off"
                app:tint="#FFFFFF" />

            <!-- Stream Ended / Offline Message -->
            <TextView
                android:id="@+id/streamEndedText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#E6000000"
                android:gravity="center"
                android:text="@string/stream_ended"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:visibility="gone" />


        </FrameLayout>

        <!-- Top Gradient (Overlays video for readability) -->
        <View
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@drawable/bg_top_gradient"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Bottom Gradient (Overlays video for readability) -->
        <View
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@drawable/bg_bottom_gradient"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Right Side Actions -->
        <LinearLayout
            android:id="@+id/actionsContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="80dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- Live Badge (Above Avatar) -->
            <TextView
                android:id="@+id/liveBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/bg_live_badge"
                android:paddingVertical="4dp"
                android:paddingHorizontal="8dp"
                android:text="@string/live_badge"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold" />

            <!-- Avatar -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/channelAvatar"
                android:layout_width="51dp"
                android:layout_height="51dp"
                android:scaleType="centerCrop"
                android:background="@drawable/bg_circle_dark_shadow"
                android:clickable="true"
                android:focusable="true"
                android:padding="1dp"
                android:backgroundTint="@null"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                app:shapeAppearanceOverlay="@style/CircleImageView"
                tools:src="@drawable/ic_person" />

            <!-- Viewers Count -->
            <LinearLayout
                android:id="@+id/viewersClickWrapper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/bg_feed_button_stroke"
                android:padding="8dp">
                
                <ImageView
                    android:id="@+id/iconViewers"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_viewers"
                    app:tint="#FFFFFF" />

                <TextView
                    android:id="@+id/viewersCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:layout_marginTop="2dp"
                    android:shadowColor="#000000"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2"
                    tools:text="feedViewsCount" />
            </LinearLayout>

            <!-- Share -->
            <ImageButton
                android:id="@+id/btnShare"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_feed_button_stroke"
                android:src="@drawable/ic_share"
                android:scaleType="fitCenter"
                android:padding="10dp"
                app:tint="#FFFFFF"
                android:clickable="true"
                android:focusable="true" />

            <!-- More Options -->
            <ImageButton
                android:id="@+id/btnMore"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_feed_button_stroke"
                android:src="@drawable/ic_more_vert"
                android:scaleType="fitCenter"
                android:padding="10dp"
                app:tint="#FFFFFF"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

        <!-- Bottom Info Section -->
        <LinearLayout
            android:id="@+id/bottomInfoContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="72dp"
            android:layout_marginBottom="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- Channel Name with Follow Button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/channelName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:text="channelName" />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnFollow"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="@string/follow"
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        app:cornerRadius="18dp"
                        app:backgroundTint="#53FC18"
                        app:icon="@drawable/ic_heart_outline"
                        app:iconSize="16dp"
                        app:iconTint="#000000"
                        app:iconPadding="4dp" />

                    <ProgressBar
                        android:id="@+id/followBtnSpinner"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:indeterminateTint="#53FC18"
                        android:visibility="gone" />
                </FrameLayout>
            </LinearLayout>

            <!-- Stream Title -->
            <TextView
                android:id="@+id/streamTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="#CCCCCC"
                android:textSize="14sp"
                android:maxLines="2"
                android:ellipsize="end"
                tools:text="streamTitle" />

            <!-- Category -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/categoryIcon"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_category"
                    app:tint="#888888" />

                <TextView
                    android:id="@+id/categoryName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:textColor="#888888"
                    android:textSize="13sp"
                    tools:text="categoryName" />
            </LinearLayout>
        </LinearLayout>







        </androidx.constraintlayout.widget.ConstraintLayout>
    
    </FrameLayout>

</FrameLayout>
