<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <!-- Background Decoration -->
    <View
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="@drawable/bg_login_glow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="-100dp"
        android:layout_marginEnd="-100dp"
        android:alpha="0.3" />

    <ImageButton
        android:id="@+id/loginBackButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="12dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#FFFFFF" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loginBackButton">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingHorizontal="32dp"
            android:paddingBottom="40dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="20dp"
                android:src="@mipmap/ic_launcher_green" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/app_name_caps"
                android:textColor="#FFFFFF"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_with_kick_account"
                android:textColor="#808080"
                android:textSize="14sp" />

            <!-- Input Card -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#1a1a1a"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    app:layout_constraintWidth_max="480dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/email_or_username_label"
                        android:textColor="#B0B0B0"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/loginEmailInput"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/bg_login_input"
                        android:inputType="textEmailAddress"
                        android:paddingHorizontal="16dp"
                        android:textColor="#FFFFFF"
                        android:textColorHint="#40FFFFFF"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="@string/password_label"
                        android:textColor="#B0B0B0"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:hintEnabled="false"
                        app:passwordToggleEnabled="true"
                        app:passwordToggleTint="#B0B0B0"
                        app:boxBackgroundMode="none">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/loginPasswordInput"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="@drawable/bg_login_input"
                            android:inputType="textPassword"
                            android:paddingStart="16dp"
                            android:paddingEnd="48dp"
                            android:paddingTop="0dp"
                            android:paddingBottom="0dp"
                            android:gravity="center_vertical"
                            android:textColor="#FFFFFF"
                            android:textSize="15sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- OTP Section (Hidden by default) -->



                    <TextView
                        android:id="@+id/loginErrorText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/error_invalid_credentials"
                        android:textColor="#FF4B4B"
                        android:textSize="13sp"
                        android:visibility="gone"
                        android:gravity="center" />

                    <FrameLayout
                        android:id="@+id/loginSubmitButton"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:layout_marginTop="24dp"
                        android:background="@drawable/bg_login_button">

                        <TextView
                            android:id="@+id/loginSubmitText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/login_button"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <ProgressBar
                            android:id="@+id/loginLoadingSpinner"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:visibility="gone"
                            android:indeterminateTint="#000000" />
                    </FrameLayout>

                </LinearLayout>
                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/btnSwitchToWebView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/login_with_webview"
                android:textColor="#53FC18"
                android:textSize="14sp"
                android:textStyle="bold"
                android:padding="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:text="@string/login_data_disclaimer"
                android:textColor="#606060"
                android:textSize="11sp" />

        </LinearLayout>
    </ScrollView>

    <!-- WebView Login Layer -->
    <FrameLayout
        android:id="@+id/webViewContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0F0F0F"
        android:visibility="gone"
        tools:visibility="visible">

        <WebView
            android:id="@+id/loginWebView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ProgressBar
            android:id="@+id/webViewLoading"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:indeterminateTint="#53FC18" />

        <ImageButton
            android:id="@+id/webViewCloseButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="16dp"
            android:background="@drawable/bg_item_ripple"
            android:src="@drawable/ic_close"
            app:tint="#FFFFFF" />
    </FrameLayout>

    <!-- 2FA Full Screen Overlay -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/loginOtpContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0F0F0F"
        android:padding="24dp"
        android:visibility="gone"
        tools:visibility="visible"
        android:elevation="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/otpLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/otpLogoP1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="K"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#53FC18"
                app:fontFamily="@font/brand_logo_font"
                android:scaleX="-1" />

            <TextView
                android:id="@+id/otpLogoP2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CIK"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#53FC18"
                app:fontFamily="@font/brand_logo_font" />
        </LinearLayout>
            
        <ImageButton
            android:id="@+id/otpCloseButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_close"
            app:tint="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/otpLogo"/>
            
        <TextView
            android:id="@+id/otpTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/verify_2fa_title"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="40dp"
            app:drawableStartCompat="@drawable/ic_arrow_back"
            android:drawablePadding="12dp"
            app:drawableTint="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@id/otpLogo"
            app:layout_constraintStart_toStartOf="parent" />
            
        <TextView
            android:id="@+id/otpSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/verify_2fa_desc"
            android:textColor="#B0B0B0"
            android:textSize="14sp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/otpTitle"
            app:layout_constraintStart_toStartOf="parent"/>

        <LinearLayout
            android:id="@+id/otpFieldsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/otpSubtitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <EditText android:id="@+id/otp_1"
                android:layout_width="45dp"
                android:layout_height="55dp"
                android:background="@drawable/bg_otp_input"
                android:gravity="center"
                android:inputType="number"
                android:importantForAutofill="no"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:nextFocusRight="@+id/otp_2" />
            <Space android:layout_width="8dp" android:layout_height="wrap_content"/>
            <EditText android:id="@+id/otp_2"
                android:layout_width="45dp"
                android:layout_height="55dp"
                android:background="@drawable/bg_otp_input"
                android:gravity="center"
                android:inputType="number"
                android:importantForAutofill="no"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:nextFocusRight="@+id/otp_3" />
            <Space android:layout_width="8dp" android:layout_height="wrap_content"/>
            <EditText android:id="@+id/otp_3"
                android:layout_width="45dp"
                android:layout_height="55dp"
                android:background="@drawable/bg_otp_input"
                android:gravity="center"
                android:inputType="number"
                android:importantForAutofill="no"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:nextFocusRight="@+id/otp_4" />
            <Space android:layout_width="8dp" android:layout_height="wrap_content"/>
            <EditText android:id="@+id/otp_4"
                android:layout_width="45dp"
                android:layout_height="55dp"
                android:background="@drawable/bg_otp_input"
                android:gravity="center"
                android:inputType="number"
                android:importantForAutofill="no"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:nextFocusRight="@+id/otp_5" />
            <Space android:layout_width="8dp" android:layout_height="wrap_content"/>
            <EditText android:id="@+id/otp_5"
                android:layout_width="45dp"
                android:layout_height="55dp"
                android:background="@drawable/bg_otp_input"
                android:gravity="center"
                android:inputType="number"
                android:importantForAutofill="no"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:nextFocusRight="@+id/otp_6" />
            <Space android:layout_width="8dp" android:layout_height="wrap_content"/>
            <EditText android:id="@+id/otp_6"
                android:layout_width="45dp"
                android:layout_height="55dp"
                android:background="@drawable/bg_otp_input"
                android:gravity="center"
                android:inputType="number"
                android:importantForAutofill="no"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
        
        <!-- Status Text -->
         <TextView
            android:id="@+id/otpStatusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/otpFieldsContainer" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
