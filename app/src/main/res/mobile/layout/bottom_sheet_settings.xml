<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="24dp">

    <!-- Player Settings Section -->
    <TextView
        android:id="@+id/settingPlayerHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        android:text="@string/settings_category_player"
        android:textColor="#53fc18"
        android:textSize="12sp"
        android:textStyle="bold" />



    <!-- Quality Setting -->
    <LinearLayout
        android:id="@+id/settingQuality"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/bg_item_ripple"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_hd"
            app:tint="#888888" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setting_mobile_quality"
                android:textColor="#FFFFFF"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/settingQualityValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/quality_unlimited"
                android:textColor="#888888"
                android:textSize="13sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_chevron_right"
            app:tint="#555555" />
    </LinearLayout>
    
    <!-- Dynamic Quality Toggle -->
    <LinearLayout
        android:id="@+id/settingDynamicQuality"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@drawable/bg_item_ripple"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_settings"
            app:tint="#888888" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setting_dynamic_quality"
                android:textColor="#FFFFFF"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dynamic_quality_desc"
                android:textColor="#888888"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Custom Toggle -->
        <FrameLayout
            android:id="@+id/toggleDynamicQuality"
            android:layout_width="52dp"
            android:layout_height="28dp"
            android:background="@drawable/bg_toggle_off">

            <View
                android:id="@+id/toggleDynamicQualityThumb"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="center_vertical|start"
                android:layout_marginStart="3dp"
                android:background="@drawable/bg_toggle_thumb" />
        </FrameLayout>
    </LinearLayout>

    <!-- Background Audio Toggle -->
    <LinearLayout
        android:id="@+id/settingBackgroundAudio"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@drawable/bg_item_ripple"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp">

        <ImageView
            android:id="@+id/iconBackgroundAudio"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_headphones"
            app:tint="#888888" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setting_background_audio"
                android:textColor="#FFFFFF"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/bgAudioStatusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/off"
                android:textColor="#888888"
                android:textSize="13sp" />
        </LinearLayout>

        <!-- Custom Toggle Button -->
        <FrameLayout
            android:id="@+id/toggleBackgroundAudio"
            android:layout_width="52dp"
            android:layout_height="28dp"
            android:background="@drawable/bg_toggle_off">

            <View
                android:id="@+id/toggleThumb"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="center_vertical|start"
                android:layout_marginStart="3dp"
                android:background="@drawable/bg_toggle_thumb" />
        </FrameLayout>
    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="#2a2a2a" />

    <!-- Appearance Section -->
    <TextView
        android:id="@+id/settingAppearanceHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        android:text="@string/settings_category_appearance"
        android:textColor="#53fc18"
        android:textSize="12sp"
        android:textStyle="bold" />

    <!-- Theme Color -->
    <LinearLayout
        android:id="@+id/settingTheme"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/bg_item_ripple"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_palette"
            app:tint="#888888" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setting_theme"
                android:textColor="#FFFFFF"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/settingThemeValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/kciktv_cyan"
                android:textColor="#888888"
                android:textSize="13sp" />
        </LinearLayout>

        <View
            android:id="@+id/themeColorPreview"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/circle_border" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_chevron_right"
            app:tint="#555555" />
    </LinearLayout>

    <!-- App Language -->
    <LinearLayout
        android:id="@+id/settingAppLanguage"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/bg_item_ripple"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_language"
            app:tint="#888888" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setting_app_language"
                android:textColor="#FFFFFF"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/settingAppLanguageValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="appLanguage"
                android:textColor="#888888"
                android:textSize="13sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_chevron_right"
            app:tint="#555555" />
    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="#2a2a2a" />

    <!-- Third Party Components -->
    <TextView
        android:id="@+id/settingThirdPartyHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        android:text="@string/settings_category_third_party"
        android:textColor="#53fc18"
        android:textSize="12sp"
        android:textStyle="bold" />

    <!-- Blerp Toggle -->
    <LinearLayout
        android:id="@+id/settingBlerp"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@drawable/bg_item_ripple"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_blerp"
            app:tint="#888888" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/blerp_title"
                android:textColor="#FFFFFF"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/blerp_desc"
                android:textColor="#888888"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Custom Toggle -->
        <FrameLayout
            android:id="@+id/toggleBlerp"
            android:layout_width="52dp"
            android:layout_height="28dp"
            android:background="@drawable/bg_toggle_off">

            <View
                android:id="@+id/toggleBlerpThumb"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="center_vertical|start"
                android:layout_marginStart="3dp"
                android:background="@drawable/bg_toggle_thumb" />
        </FrameLayout>
    </LinearLayout>
    
    <!-- Divider -->

    <!-- App Section -->
    <TextView
        android:id="@+id/settingAppHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        android:text="@string/settings_category_app"
        android:textColor="#53fc18"
        android:textSize="12sp"
        android:textStyle="bold" />

    <!-- Switch to TV UI -->
    <LinearLayout
        android:id="@+id/settingSwitchToTv"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/bg_item_ripple"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_tv"
            app:tint="#888888" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:text="@string/switch_to_tv_ui"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_chevron_right"
            app:tint="#555555" />
    </LinearLayout>

    <!-- Chat Refresh Rate -->
    <LinearLayout
        android:id="@+id/settingChatRefresh"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/bg_item_ripple"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_timer"
            app:tint="#888888" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setting_chat_refresh_title"
                android:textColor="#FFFFFF"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/settingChatRefreshValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="120ms"
                android:textColor="#888888"
                android:textSize="13sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_chevron_right"
            app:tint="#555555" />
    </LinearLayout>

    <!-- Check Updates -->
    <LinearLayout
        android:id="@+id/settingCheckUpdate"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/bg_item_ripple"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_update"
            app:tint="#888888" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:text="@string/check_update"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_chevron_right"
            app:tint="#555555" />
    </LinearLayout>

    <!-- What's New -->
    <LinearLayout
        android:id="@+id/settingWhatsNew"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/bg_item_ripple"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp">

        <TextView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:text="@string/celebration_emoji"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_gravity="center_vertical" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:text="@string/setting_whats_new"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_chevron_right"
            app:tint="#555555" />
    </LinearLayout>

    <!-- About -->
    <LinearLayout
        android:id="@+id/settingAbout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/bg_item_ripple"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_info"
            app:tint="#888888" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setting_about"
                android:textColor="#FFFFFF"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/settingVersionValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#888888"
                android:textSize="13sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_chevron_right"
            app:tint="#555555" />
    </LinearLayout>



</LinearLayout>
</ScrollView>
