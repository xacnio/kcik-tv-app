<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#141414"
    android:padding="24dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/view_and_filters"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/viewModeLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/view_mode"
                android:textColor="#AAAAAA"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"/>

            <RadioGroup
                android:id="@+id/viewModeGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <RadioButton
                    android:id="@+id/radioList"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/view_list"
                    android:textColor="#FFFFFF"
                    android:buttonTint="#53FC18"/>

                <RadioButton
                    android:id="@+id/radioGrid"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/view_grid"
                    android:textColor="#FFFFFF"
                    android:buttonTint="#53FC18"/>
            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sorting"
                android:textColor="#AAAAAA"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"/>

            <RadioGroup
                android:id="@+id/sortGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">

                <RadioButton
                    android:id="@+id/sortRecommended"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/recommended_streams"
                    android:textColor="#FFFFFF"
                    android:buttonTint="#53FC18"/>

                <RadioButton
                    android:id="@+id/sortViewersDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/viewers_high_to_low"
                    android:textColor="#FFFFFF"
                    android:buttonTint="#53FC18"/>

                <RadioButton
                    android:id="@+id/sortViewersAsc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/viewers_low_to_high"
                    android:textColor="#FFFFFF"
                    android:buttonTint="#53FC18"/>
            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/stream_language"
                android:textColor="#AAAAAA"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"/>

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/languageChipGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                app:chipSpacing="8dp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>
