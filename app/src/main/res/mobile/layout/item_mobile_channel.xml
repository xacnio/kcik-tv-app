<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/channelItemContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="6dp"
    app:cardBackgroundColor="#1a1a1a"
    app:cardCornerRadius="0dp"
    app:cardElevation="2dp"
    app:strokeWidth="0dp"
    app:strokeColor="#53fc18">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Thumbnail Section with Top Rounded Corners -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#2a2a2a">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Stream Thumbnail 16:9 Ratio -->
                <ImageView
                    android:id="@+id/channelThumbnail"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@android:color/black"
                    android:scaleType="fitCenter"
                    app:layout_constraintDimensionRatio="H,16:9"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- Gradient Overlay -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:background="@drawable/gradient_top_dark"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- LIVE Badge -->
                <TextView
                    android:id="@+id/liveBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@drawable/bg_live_badge"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="3dp"
                    android:text="@string/live"
                    android:textColor="#FFFFFF"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- Mature Content Badge -->
                <TextView
                    android:id="@+id/matureBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/badge_mature"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="3dp"
                    android:text="@string/rating_18_plus"
                    android:textColor="#FFFFFF"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@id/liveBadge"
                    app:layout_constraintStart_toEndOf="@id/liveBadge"
                    app:layout_constraintTop_toTopOf="@id/liveBadge" />

                <!-- Viewer Count Badge -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@drawable/bg_viewer_badge"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="3dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <View
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:background="@drawable/bg_live_dot" />

                    <TextView
                        android:id="@+id/viewerCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:textColor="#FFFFFF"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        tools:text="viewerCount" />
                </LinearLayout>

                <!-- Duration/Uptime Badge -->
                <TextView
                    android:id="@+id/uptime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@drawable/bg_duration_badge"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="2dp"
                    android:textColor="#FFFFFF"
                    android:textSize="10sp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="uptime" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>


        <!-- Channel Info Row with Blurred Background -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:clipChildren="false">

            <!-- Blurred Background Avatar -->
            <ImageView
                android:id="@+id/blurredBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:alpha="0.25" />

            <!-- Dark Overlay -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#80000000" />

            <!-- Channel Info Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="12dp">

                <!-- Channel Avatar -->
                <ImageView
                    android:id="@+id/channelProfilePic"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@drawable/circle_border"
                    android:scaleType="centerCrop"
                    tools:src="@mipmap/ic_launcher" />

                <!-- Channel Details -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!-- Channel Name -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        
                        <TextView
                            android:id="@+id/channelUsername"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textColor="#FFFFFF"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            tools:text="channelUsername" />

                        <ImageView
                            android:id="@+id/verifiedBadge"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_marginStart="4dp"
                            android:src="@drawable/ic_badge_verified"
                            android:visibility="gone"
                            tools:visibility="visible" />
                    </LinearLayout>

                    <!-- Stream Title -->
                    <TextView
                        android:id="@+id/channelStreamerName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:textColor="#AAAAAA"
                        android:textSize="12sp"
                        tools:text="channelStreamerName" />

                    <!-- Tags Row (Category, Language, Tags) -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <!-- Category Tag -->
                        <TextView
                            android:id="@+id/channelCategory"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_category_tag"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="3dp"
                            android:textColor="#53fc18"
                            android:textSize="10sp"
                            android:maxLines="1"
                            android:ellipsize="end"
                            tools:text="channelCategory" />

                        <!-- Language Tag -->
                        <TextView
                            android:id="@+id/languageTag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:background="@drawable/bg_language_tag"
                            android:paddingHorizontal="6dp"
                            android:paddingVertical="3dp"
                            android:textColor="#FFFFFF"
                            android:textSize="10sp"
                            android:visibility="gone"
                            tools:text="channelLanguage" />

                        <!-- Tags Container -->
                        <LinearLayout
                            android:id="@+id/tagsContainer"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="4dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
