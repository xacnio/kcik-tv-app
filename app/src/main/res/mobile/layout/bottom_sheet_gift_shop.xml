<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#191B1F">

    <ViewFlipper
        android:id="@+id/giftShopFlipper"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Page 0: Gift List -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Header -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/gift_shop_title"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"/>

                 <ImageButton
                    android:id="@+id/btnClose"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentEnd="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_close"
                    app:tint="#FFFFFF"
                    android:padding="12dp"
                    android:scaleType="fitCenter"/>
            </RelativeLayout>

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="80dp">

                    <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:orientation="vertical"
                         android:paddingHorizontal="16dp">

                        <!-- Basic Gifts -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/gift_shop_basic_gifts"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:textSize="16sp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/gift_shop_basic_desc"
                            android:textColor="#A8ADB3"
                            android:textSize="14sp"
                            android:layout_marginBottom="16dp"/>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvBasicGifts"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="24dp"
                            android:nestedScrollingEnabled="false"/>

                        <!-- Level Up Gifts -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/gift_shop_level_up_gifts"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:textSize="16sp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/gift_shop_level_up_desc"
                            android:textColor="#A8ADB3"
                            android:textSize="14sp"
                            android:layout_marginBottom="16dp"/>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvLevelUpGifts"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:nestedScrollingEnabled="false"/>
                    </LinearLayout>

                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

            <!-- Footer -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#191B1F"
                android:padding="16dp"
                android:elevation="20dp">

                 <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_balance_pill"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                     <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_app_logo"
                        android:layout_marginEnd="6dp"/>

                     <TextView
                        android:id="@+id/txtBalance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="0"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="18sp"/>
                 </LinearLayout>
            </FrameLayout>
        </LinearLayout>

        <!-- Page 1: Gift Preview -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Header -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <ImageButton
                    android:id="@+id/btnBackToShop"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentStart="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_back_arrow"
                    app:tint="#FFFFFF"
                    android:padding="12dp"
                    android:scaleType="fitCenter"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/preview_label"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_centerInParent="true"/>

                 <ImageButton
                    android:id="@+id/btnClosePreview"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentEnd="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_close"
                    app:tint="#FFFFFF"
                    android:padding="12dp"
                    android:scaleType="fitCenter"/>
            </RelativeLayout>

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Preview Card -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#00000000"
                        android:layout_marginBottom="24dp">
                        
                        <LinearLayout
                            android:id="@+id/previewCardBackground"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="@drawable/bg_pinned_gift_gradient"
                            android:padding="16dp"
                            android:gravity="center_vertical">
                            
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">
                                
                                <TextView
                                    android:id="@+id/previewSenderText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    tools:text="previewSenderText"
                                    android:textColor="#FFFFFF"
                                    android:textStyle="bold"
                                    android:textSize="16sp"/>                         
                                
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="12dp"
                                    android:gravity="center_vertical">
                                    
                                    <ImageView
                                        android:layout_width="16dp"
                                        android:layout_height="16dp"
                                        android:src="@drawable/ic_app_logo"/>
                                    
                                    <TextView
                                        android:id="@+id/previewCostSmall"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        tools:text="500"
                                        android:textColor="#FFFFFF"
                                        android:textStyle="bold"
                                        android:layout_marginStart="4dp"/>
                                        
                                    <ImageView
                                        android:id="@+id/previewTimerIcon"
                                        android:layout_width="16dp"
                                        android:layout_height="16dp"
                                        android:src="@drawable/ic_timer"
                                        android:layout_marginStart="12dp"
                                        app:tint="#FFFFFF"/>
                                        
                                    <TextView
                                        android:id="@+id/previewDuration"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        tools:text="10:00"
                                        android:textColor="#FFFFFF"
                                        android:textStyle="bold"
                                        android:layout_marginStart="4dp"/>
                                </LinearLayout>
                            </LinearLayout>
                            
                            <ImageView
                                android:id="@+id/previewGiftImage"
                                android:layout_width="72dp"
                                android:layout_height="72dp"
                                android:scaleType="fitCenter"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Message Input -->
                    <EditText
                        android:id="@+id/edtGiftMessage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="56dp"
                        android:background="@drawable/bg_gift_input"
                        android:hint="@string/gift_message_hint"
                        android:textColorHint="#666666"
                        android:textColor="#FFFFFF"
                        android:padding="12dp"
                        android:textSize="15sp"
                        android:gravity="top"/>

                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

            <!-- Footer -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#191B1F"
                android:paddingHorizontal="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="16dp">

                <!-- Quantity Selector Row -->
                <LinearLayout
                    android:id="@+id/quantitySelectorRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:id="@+id/btnQty1"
                        android:layout_width="0dp"
                        android:layout_height="36dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="6dp"
                        android:text="x1"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:background="@drawable/bg_quantity_chip_selected"/>

                    <TextView
                        android:id="@+id/btnQty2"
                        android:layout_width="0dp"
                        android:layout_height="36dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="6dp"
                        android:text="x2"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:background="@drawable/bg_quantity_chip"/>

                    <TextView
                        android:id="@+id/btnQty3"
                        android:layout_width="0dp"
                        android:layout_height="36dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="6dp"
                        android:text="x3"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:background="@drawable/bg_quantity_chip"/>

                    <TextView
                        android:id="@+id/btnQty4"
                        android:layout_width="0dp"
                        android:layout_height="36dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="6dp"
                        android:text="x4"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:background="@drawable/bg_quantity_chip"/>

                    <TextView
                        android:id="@+id/btnQty5"
                        android:layout_width="0dp"
                        android:layout_height="36dp"
                        android:layout_weight="1"
                        android:text="x5"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:background="@drawable/bg_quantity_chip"/>
                </LinearLayout>

                <!-- Balance + Send Button Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_balance_pill"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                         <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_app_logo"
                            android:layout_marginEnd="6dp"/>

                         <TextView
                            android:id="@+id/previewFooterCost"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="500"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:textSize="18sp"/>
                     </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>

                     <Button
                        android:id="@+id/btnSendGift"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/send_action"
                        android:textAllCaps="false"
                        android:backgroundTint="#53FC18"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:minWidth="120dp"
                        android:textSize="16sp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ViewFlipper>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
