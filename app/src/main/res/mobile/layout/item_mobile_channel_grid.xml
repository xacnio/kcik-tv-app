<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/channelItemContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardBackgroundColor="#1a1a1a"
    app:cardCornerRadius="0dp"
    app:cardElevation="1dp"
    app:strokeWidth="0dp"
    app:strokeColor="#53fc18">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Thumbnail Section with Top Rounded Corners -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#2a2a2a">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Thumbnail -->
                <ImageView
                    android:id="@+id/channelThumbnail"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@android:color/black"
                    android:scaleType="fitCenter"
                    app:layout_constraintDimensionRatio="H,16:9"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- Mature Content Badge -->
                <TextView
                    android:id="@+id/matureBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:background="@drawable/badge_mature"
                    android:paddingHorizontal="4dp"
                    android:paddingVertical="1dp"
                    android:text="@string/rating_18_plus"
                    android:textColor="#FFFFFF"
                    android:textSize="9sp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- LIVE/Viewer Count Overlay -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:background="@drawable/bg_viewer_badge"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="4dp"
                    android:paddingVertical="1dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <View
                        android:layout_width="4dp"
                        android:layout_height="4dp"
                        android:background="@drawable/bg_live_dot" />

                    <TextView
                        android:id="@+id/viewerCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:textColor="#FFFFFF"
                        android:textSize="9sp"
                        android:textStyle="bold"
                        tools:text="viewerCount" />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>


        <!-- Info Section with Blurred Background -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Blurred Background Avatar -->
            <ImageView
                android:id="@+id/blurredBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:alpha="0.25" />

            <!-- Dark Overlay -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#80000000" />

            <!-- Info Content -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:gravity="top">

                <ImageView
                    android:id="@+id/channelProfilePic"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/circle_border"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        
                        <TextView
                            android:id="@+id/channelUsername"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:layout_weight="0"
                            tools:text="channelUsername" />

                        <ImageView
                            android:id="@+id/verifiedBadge"
                            android:layout_width="11dp"
                            android:layout_height="11dp"
                            android:layout_marginStart="3dp"
                            android:src="@drawable/ic_badge_verified"
                            android:visibility="gone"
                            tools:visibility="visible" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/channelStreamerName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="#AAAAAA"
                        android:textSize="10sp"
                        tools:text="channelStreamerName" />

                    <TextView
                        android:id="@+id/channelCategory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="#53fc18"
                        android:textSize="9sp"
                        tools:text="channelCategory" />
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
