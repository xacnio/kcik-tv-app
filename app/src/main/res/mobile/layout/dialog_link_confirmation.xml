<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog_rounded"
    android:padding="24dp">

    <!-- Icon & Header -->
    <ImageView
        android:id="@+id/dialogIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_link"
        app:tint="@color/brand_green"
        android:background="@drawable/bg_circle_dark"
        android:padding="12dp"/>

    <TextView
        android:id="@+id/dialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/link_warning_title"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/dialogIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Message -->
    <TextView
        android:id="@+id/dialogMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/link_warning_message_simple"
        android:textColor="#B0B0B0"
        android:textSize="14sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/dialogTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Link Preview Box -->
    <androidx.cardview.widget.CardView
        android:id="@+id/linkCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="#1A1A1A"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toBottomOf="@id/dialogMessage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Content Container -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/previewImage"
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:scaleType="centerCrop"
                        android:visibility="gone"
                        android:src="@drawable/placeholder_thumbnail" />

                    <LinearLayout
                        android:id="@+id/titleContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingHorizontal="12dp"
                        android:paddingTop="12dp"
                        android:gravity="center_vertical"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/previewFavicon"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginEnd="8dp"
                            android:scaleType="fitCenter"
                            android:visibility="gone"
                            tools:src="@drawable/ic_globe"
                            tools:visibility="visible" />

                        <TextView
                            android:id="@+id/previewTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:maxLines="2"
                            android:ellipsize="end"
                            tools:text="Video Title Here" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/previewDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="12dp"
                        android:paddingTop="4dp"
                        android:layout_marginBottom="12dp"
                        android:textColor="#B0B0B0"
                        android:textSize="12sp"
                        android:maxLines="3"
                        android:ellipsize="end"
                        android:visibility="gone"
                        tools:text="Description goes here..." />
                </LinearLayout>

                <!-- Loading Shimmer (Overlays content) -->
                <LinearLayout
                    android:id="@+id/previewLoading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <View
                        android:id="@+id/shimmerImage"
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:background="#252525" />

                    <View
                        android:id="@+id/shimmerTitle"
                        android:layout_width="200dp"
                        android:layout_height="14dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="14dp"
                        android:background="@drawable/bg_shimmer_bar" />

                    <View
                        android:id="@+id/shimmerDesc"
                        android:layout_width="140dp"
                        android:layout_height="10dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="14dp"
                        android:background="@drawable/bg_shimmer_bar" />
                </LinearLayout>

                <!-- Untrusted State View (Button to Trust & Preview) -->
                <LinearLayout
                    android:id="@+id/untrustedContainer"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:visibility="gone">
                    
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnTrustAndPreview"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add trusted domain and preview"
                        android:textColor="@color/brand_green"
                        android:textAllCaps="false"
                        app:icon="@drawable/ic_visibility"
                        app:iconTint="@color/brand_green" />
                </LinearLayout>
            </FrameLayout>

            <TextView
                android:id="@+id/urlText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="https://example.com/very/long/url/path"
                android:textColor="@color/brand_green"
                android:textSize="13sp"
                android:gravity="center"
                android:ellipsize="none"
                android:singleLine="false" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Buttons -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnOpenInApp"
        style="@style/Widget.KCIKTV.Button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="80dp"
        android:paddingVertical="12dp"
        android:layout_marginTop="24dp"
        android:text="@string/open_in_app"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/linkCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cornerRadius="12dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnOpenInInAppBrowser"
        style="@style/Widget.KCIKTV.Button.Outlined"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="12dp"
        android:text="Open in In-App Browser"
        app:layout_constraintTop_toBottomOf="@id/btnOpenInApp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cornerRadius="12dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnVisit"
        style="@style/Widget.KCIKTV.Button.Outlined"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="12dp"
        android:text="@string/visit_site"
        app:layout_constraintTop_toBottomOf="@id/btnOpenInInAppBrowser"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cornerRadius="12dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCancel"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:text="@string/cancel"
        android:textColor="#80FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/btnVisit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
