<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_bottom_sheet"
    android:paddingBottom="24dp">

    <!-- Handle Bar -->
    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_bottom_sheet_handle" />

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:paddingBottom="16dp"
        android:text="@string/about_title"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- App Info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingVertical="16dp">

        <ImageView
            android:id="@+id/aboutAppIcon"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/ic_app_logo"
            android:contentDescription="@string/app_name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/app_name_caps"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/aboutVersionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/label_version"
            android:textColor="#AAAAAA"
            android:textSize="14sp" />
            
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/about_developed_by"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/developer_name"
            android:textColor="#53FC18"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="16dp"
        android:background="#1AFFFFFF" />

    <!-- Links -->
    
    <!-- Repo -->
    <LinearLayout
        android:id="@+id/btnRepo"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/bg_item_ripple"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:layout_width="28dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="ðŸ“¦"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:text="@string/about_repo_label"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
            
         <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_chevron_right"
            app:tint="#555555" />
    </LinearLayout>

    <!-- Github -->
    <LinearLayout
        android:id="@+id/btnGithub"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/bg_item_ripple"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:layout_width="28dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="ðŸ™"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:text="@string/about_github_label"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_chevron_right"
            app:tint="#555555" />
    </LinearLayout>

    <!-- Coffee -->
    <LinearLayout
        android:id="@+id/btnCoffee"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/bg_item_ripple"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:layout_width="28dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="â˜•"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:text="@string/about_coffee_label"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_chevron_right"
            app:tint="#555555" />
    </LinearLayout>

</LinearLayout>
