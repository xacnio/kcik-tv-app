<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_bottom_sheet"
    android:orientation="vertical"
    android:paddingBottom="24dp">

    <!-- Drag Handle -->
    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_handle_bar" />

    <!-- User Header Section (Profile Pic, Name, Badges) -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Profile Picture Container with Shimmer -->
            <FrameLayout
                android:layout_width="48dp"
                android:layout_height="48dp">

                <!-- Shimmer Placeholder -->
                <View
                    android:id="@+id/avatarShimmerSheet"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_circle" />

                <!-- Actual Avatar -->
                <ImageView
                    android:id="@+id/userAvatarSheet"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_circle"
                    android:scaleType="centerCrop"
                    android:visibility="invisible"
                    tools:src="@drawable/ic_person"
                    tools:visibility="visible" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/usernameSheet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#53FC18"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:text="usernameSheet" />

                <LinearLayout
                    android:id="@+id/badgesContainerSheet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" />

            </LinearLayout>

            <!-- Ban Toggle (Switch) -->
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/banSwitchSheet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ban_label_caps"
                android:textColor="#FF4444"
                app:useMaterialThemeColors="false"
                app:thumbTint="#FF4444"
                app:trackTint="#66FF4444"
                android:visibility="gone"
                tools:visibility="visible" />

        </LinearLayout>

        <!-- Absolute positioned loading spinner overlay -->
        <ProgressBar
            android:id="@+id/userLoadingSheet"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="8dp"
            android:indeterminateTint="#53FC18"
            android:visibility="gone" />

    </FrameLayout>

    <!-- Detailed Info (Follow date, etc.) -->
    <LinearLayout
        android:id="@+id/userDetailedInfoSheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="12dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/followDateSheet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#AAAAAA"
            android:textSize="12sp"
            android:visibility="gone"
            tools:text="followDateSheet"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/subDurationSheet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="#53FC18"
            android:textSize="12sp"
            android:visibility="gone"
            tools:text="subDurationSheet"
            tools:visibility="visible" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="#2A2A2A" />

    <!-- Ban Status Indicator -->
    <LinearLayout
        android:id="@+id/banStatusContainerSheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_category_badge"
        android:backgroundTint="#33FF4444"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="12dp"
        android:visibility="gone"
        tools:visibility="visible">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_block"
            app:tint="#FF4444" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/banStatusTitleSheet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF4444"
                android:textSize="13sp"
                android:textStyle="bold"
                tools:text="banStatusTitleSheet" />

            <TextView
                android:id="@+id/banStatusDetailSheet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#AAAAAA"
                android:textSize="11sp"
                android:visibility="gone"
                tools:text="banStatusDetailSheet"
                tools:visibility="visible" />

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/unbanButtonSheet"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:minHeight="0dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:paddingHorizontal="12dp"
            android:text="@string/action_unban"
            android:textColor="#53FC18"
            android:textSize="12sp" />

    </LinearLayout>

    <!-- Timeout Section -->
    <LinearLayout
        android:id="@+id/timeoutSectionSheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="12dp"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/action_timeout"
            android:textColor="#FFA500"
            android:textSize="14sp"
            android:textStyle="bold" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp">

                <TextView
                    android:id="@+id/btnTimeout1m"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_timeout_button"
                    android:gravity="center"
                    android:paddingHorizontal="12dp"
                    android:text="@string/timeout_1m"
                    android:textColor="#FFA500"
                    android:textSize="12sp" />
                
                <TextView
                    android:id="@+id/btnTimeout5m"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_timeout_button"
                    android:gravity="center"
                    android:paddingHorizontal="12dp"
                    android:text="@string/timeout_5m"
                    android:textColor="#FFA500"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/btnTimeout1h"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_timeout_button"
                    android:gravity="center"
                    android:paddingHorizontal="12dp"
                    android:text="@string/timeout_1h"
                    android:textColor="#FFA500"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/btnTimeout1d"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_timeout_button"
                    android:gravity="center"
                    android:paddingHorizontal="12dp"
                    android:text="@string/timeout_1d"
                    android:textColor="#FFA500"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/btnTimeout1w"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:background="@drawable/bg_timeout_button"
                    android:gravity="center"
                    android:paddingHorizontal="12dp"
                    android:text="@string/timeout_1w"
                    android:textColor="#FFA500"
                    android:textSize="12sp" />

            </LinearLayout>
        </HorizontalScrollView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="#2A2A2A" />

    </LinearLayout>

    <!-- Message History Section Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/historyHeaderText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/user_history_session"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/historyLoadingSpinner"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginEnd="8dp"
            android:indeterminateTint="#53FC18"
            android:visibility="gone" />

        <TextView
            android:id="@+id/loadAllHistoryBtn"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:gravity="center"
            android:paddingHorizontal="12dp"
            android:text="@string/action_load_all"
            android:textColor="#53FC18"
            android:textSize="11sp"
            android:background="@drawable/bg_timeout_button" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/userHistoryRecyclerSheet"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:minHeight="80dp"
        android:layout_marginTop="8dp"
        android:clipToPadding="false"
        android:paddingHorizontal="12dp" />

    <TextView
        android:id="@+id/emptyHistoryTextSheet"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="@string/user_history_empty"
        android:textColor="#666666"
        android:visibility="gone"
        tools:visibility="visible" />

</LinearLayout>
