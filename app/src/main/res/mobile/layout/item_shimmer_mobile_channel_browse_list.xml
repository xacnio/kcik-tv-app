<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="24dp">

    <!-- Thumbnail Container with Top Rounded Corners -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/bg_shimmer_thumbnail_top_rounded_12dp">

        <View
            android:id="@+id/shimmerThumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        
        <!-- Viewer Count Badge (Bottom Left) -->
        <View
            android:layout_width="80dp"
            android:layout_height="24dp"
            android:layout_gravity="bottom|start"
            android:layout_margin="8dp"
            android:background="#3A3A3A" />
            
    </FrameLayout>


    <!-- Info Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="12dp">

        <!-- Avatar Shimmer -->
        <View
            android:id="@+id/shimmerAvatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/circle_shimmer_bg" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:orientation="vertical">

            <!-- Name Shimmer -->
            <View
                android:id="@+id/shimmerName"
                android:layout_width="120dp"
                android:layout_height="16dp"
                android:background="#2A2A2A" />

            <!-- Title Shimmer -->
            <View
                android:id="@+id/shimmerTitle"
                android:layout_width="200dp"
                android:layout_height="14dp"
                android:layout_marginTop="6dp"
                android:background="#2A2A2A" />

            <!-- Tags Row Shimmer -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <View
                    android:id="@+id/shimmerCategory"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:background="#2A2A2A"
                    android:layout_marginEnd="6dp"/>
                    
                <View
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:background="#2A2A2A"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
