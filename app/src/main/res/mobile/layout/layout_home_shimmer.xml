<?xml version="1.0" encoding="utf-8"?>
<dev.xacnio.kciktv.shared.ui.widget.ShimmerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@android:color/black">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="100dp">

            <!-- Section 1: Live Channels -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp">

                <!-- Section Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp">

                    <View 
                        android:layout_width="120dp" 
                        android:layout_height="18dp" 
                        android:background="#1A1A1A" />
                </LinearLayout>

                <!-- Horizontal Channel Cards -->
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:clipToPadding="false"
                    android:paddingHorizontal="16dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <include layout="@layout/item_shimmer_mobile_channel" />
                        <include layout="@layout/item_shimmer_mobile_channel" />
                        <include layout="@layout/item_shimmer_mobile_channel" />
                        <include layout="@layout/item_shimmer_mobile_channel" />
                        <include layout="@layout/item_shimmer_mobile_channel" />
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>

            <!-- Section 2: Trending Channels -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp">

                <!-- Section Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp">

                    <View 
                        android:layout_width="200dp" 
                        android:layout_height="18dp" 
                        android:background="#1A1A1A" />
                </LinearLayout>

                <!-- Horizontal Category Cards -->
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:clipToPadding="false"
                    android:paddingHorizontal="16dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <include layout="@layout/item_shimmer_mobile_category" />
                        <include layout="@layout/item_shimmer_mobile_category" />
                        <include layout="@layout/item_shimmer_mobile_category" />
                        <include layout="@layout/item_shimmer_mobile_category" />
                        <include layout="@layout/item_shimmer_mobile_category" />
                        <include layout="@layout/item_shimmer_mobile_category" />
                        <include layout="@layout/item_shimmer_mobile_category" />
                        <include layout="@layout/item_shimmer_mobile_category" />
                        <include layout="@layout/item_shimmer_mobile_category" />
                        <include layout="@layout/item_shimmer_mobile_category" />
                        <include layout="@layout/item_shimmer_mobile_category" />
                        <include layout="@layout/item_shimmer_mobile_category" />
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>
            
            <!-- Section 3: Following Live Channels (Restored with ID) -->
            <LinearLayout
                android:id="@+id/shimmerFollowingSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp">

                <!-- Section Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp">

                    <View 
                        android:layout_width="180dp" 
                        android:layout_height="18dp" 
                        android:background="#1A1A1A" />
                </LinearLayout>

                <!-- Horizontal Channel Cards -->
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:clipToPadding="false"
                    android:paddingHorizontal="16dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <include layout="@layout/item_shimmer_mobile_channel" />
                        <include layout="@layout/item_shimmer_mobile_channel" />
                        <include layout="@layout/item_shimmer_mobile_channel" />
                        <include layout="@layout/item_shimmer_mobile_channel" />
                        <include layout="@layout/item_shimmer_mobile_channel" />
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>

            <!-- Section 4: Popular Clips -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp">

                    <View 
                        android:layout_width="150dp" 
                        android:layout_height="18dp" 
                        android:background="#1A1A1A" />
                </LinearLayout>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:clipToPadding="false"
                    android:paddingHorizontal="16dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <include layout="@layout/item_shimmer_clip_home" android:layout_width="200dp" android:layout_height="wrap_content" android:layout_marginEnd="12dp" />
                        <include layout="@layout/item_shimmer_clip_home" android:layout_width="200dp" android:layout_height="wrap_content" android:layout_marginEnd="12dp" />
                        <include layout="@layout/item_shimmer_clip_home" android:layout_width="200dp" android:layout_height="wrap_content" android:layout_marginEnd="12dp" />
                        <include layout="@layout/item_shimmer_clip_home" android:layout_width="200dp" android:layout_height="wrap_content" android:layout_marginEnd="12dp" />
                        <include layout="@layout/item_shimmer_clip_home" android:layout_width="200dp" android:layout_height="wrap_content" android:layout_marginEnd="12dp" />
                        <include layout="@layout/item_shimmer_clip_home" android:layout_width="200dp" android:layout_height="wrap_content" android:layout_marginEnd="12dp" />
                        <include layout="@layout/item_shimmer_clip_home" android:layout_width="200dp" android:layout_height="wrap_content" android:layout_marginEnd="12dp" />
                        <include layout="@layout/item_shimmer_clip_home" android:layout_width="200dp" android:layout_height="wrap_content" android:layout_marginEnd="12dp" />
                        <include layout="@layout/item_shimmer_clip_home" android:layout_width="200dp" android:layout_height="wrap_content" android:layout_marginEnd="12dp" />
                        <include layout="@layout/item_shimmer_clip_home" android:layout_width="200dp" android:layout_height="wrap_content" android:layout_marginEnd="12dp" />
                        <include layout="@layout/item_shimmer_clip_home" android:layout_width="200dp" android:layout_height="wrap_content" android:layout_marginEnd="12dp" />
                        <include layout="@layout/item_shimmer_clip_home" android:layout_width="200dp" android:layout_height="wrap_content" android:layout_marginEnd="12dp" />
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</dev.xacnio.kciktv.shared.ui.widget.ShimmerLayout>
