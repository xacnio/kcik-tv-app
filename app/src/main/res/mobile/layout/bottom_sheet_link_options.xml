<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_bottom_sheet"
    android:paddingBottom="16dp">

    <!-- Drag Handle -->
    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:background="#33FFFFFF"
        android:backgroundTint="#808080" />

    <!-- Title / URL Display -->
    <TextView
        android:id="@+id/sheetTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="24dp"
        android:paddingBottom="16dp"
        android:text="Link Options"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end"/>

    <!-- Trust Domain Button (Hidden by default) -->
    <LinearLayout
        android:id="@+id/btnTrustDomain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="24dp"
        android:paddingVertical="14dp"
        android:visibility="gone"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_link_sheet_browser"
            app:tint="#FFFFFF"
            android:contentDescription="Trust" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/add_trusted_domain_preview"
            android:textColor="#E0E0E0"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Kick Channel Preview (Horizontal) -->
    <LinearLayout
        android:id="@+id/kickPreviewContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="24dp"
        android:paddingBottom="16dp"
        android:paddingTop="8dp"
        android:visibility="gone"
        android:gravity="center_vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/previewAvatarContainer"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:cardCornerRadius="24dp"
            app:cardBackgroundColor="#333333"
            app:cardElevation="0dp">
            <ImageView
                android:id="@+id/previewImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_link_sheet_search"
                app:tint="#AAAAAA"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp">
            
            <TextView
                android:id="@+id/previewTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Channel Name"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="16sp"
                android:maxLines="1"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/previewDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kick Channel"
                android:textColor="#AAAAAA"
                android:textSize="14sp"
                android:maxLines="1"
                android:ellipsize="end"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Trusted Link Preview (Vertical Card) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/trustedPreviewCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="16dp"
        android:visibility="gone"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="#222222"
        app:cardElevation="4dp">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            
            <!-- Large Header Image -->
            <ImageView
                android:id="@+id/trustedImage"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:scaleType="centerCrop"
                android:src="@drawable/placeholder_thumbnail"/>

            <!-- Metadata -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="4dp">
                    
                    <ImageView
                        android:id="@+id/trustedFavicon"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/ic_link_sheet_browser"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/trustedTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Page Title"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:maxLines="2"
                        android:ellipsize="end" />
                </LinearLayout>

                <TextView
                    android:id="@+id/trustedDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Description goes here..."
                    android:textColor="#AAAAAA"
                    android:textSize="14sp"
                    android:maxLines="2"
                    android:ellipsize="end" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Copy URL -->
    <LinearLayout
        android:id="@+id/btnCopyUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="24dp"
        android:paddingVertical="14dp"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_link_sheet_copy" 
            app:tint="#FFFFFF"
            android:contentDescription="Copy" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Copy URL"
            android:textColor="#E0E0E0"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Open In In-App Browser -->
    <LinearLayout
        android:id="@+id/btnInAppBrowser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="24dp"
        android:paddingVertical="14dp"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_link_sheet_search"
            app:tint="#FFFFFF"
            android:contentDescription="Search" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Open In App Browser"
            android:textColor="#E0E0E0"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Open In App (e.g. Instagram) - Hidden by default -->
    <LinearLayout
        android:id="@+id/btnOpenInApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="24dp"
        android:paddingVertical="14dp"
        android:visibility="gone"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:id="@+id/iconOpenInApp"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="App Icon" />

        <TextView
            android:id="@+id/textOpenInApp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Open In App"
            android:textColor="#E0E0E0"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Open In Browser (e.g. Opera) -->
    <LinearLayout
        android:id="@+id/btnOpenInExternalBrowser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="24dp"
        android:paddingVertical="14dp"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:id="@+id/iconExternalBrowser"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_link_sheet_browser"
            app:tint="#FFFFFF"
            android:contentDescription="Browser" />

        <TextView
            android:id="@+id/textOpenInExternalBrowser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Open in Browser"
            android:textColor="#E0E0E0"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>
