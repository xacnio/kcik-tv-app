<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_bottom_sheet"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/create_poll"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btnClose"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_close"
            app:tint="#FFFFFF" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:isScrollContainer="true">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Question Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/poll_question_label"
                android:textColor="#AAAAAA"
                android:textSize="12sp"
                android:layout_marginBottom="6dp"/>

            <EditText
                android:id="@+id/pollTitleInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_chat_input"
                android:hint="@string/poll_question_hint"
                android:padding="12dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#808080"
                android:textSize="14sp"
                android:maxLines="2"
                android:inputType="textMultiLine"
                android:layout_marginBottom="16dp"/>

            <!-- Options Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/poll_options_label"
                android:textColor="#AAAAAA"
                android:textSize="12sp"
                android:layout_marginBottom="8dp"/>

            <!-- Option 1 -->
            <EditText
                android:id="@+id/option1Input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_chat_input"
                android:hint="@string/poll_option_1_hint"
                android:padding="12dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#808080"
                android:textSize="14sp"
                android:maxLines="1"
                android:singleLine="true"
                android:layout_marginBottom="8dp"/>

            <!-- Option 2 -->
            <EditText
                android:id="@+id/option2Input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_chat_input"
                android:hint="@string/poll_option_2_hint"
                android:padding="12dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#808080"
                android:textSize="14sp"
                android:maxLines="1"
                android:singleLine="true"
                android:layout_marginBottom="8dp"/>

            <!-- Option 3 (Hidden initially) -->
            <EditText
                android:id="@+id/option3Input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_chat_input"
                android:hint="@string/poll_option_3_hint"
                android:padding="12dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#808080"
                android:textSize="14sp"
                android:maxLines="1"
                android:singleLine="true"
                android:layout_marginBottom="8dp"
                android:visibility="gone"/>

            <!-- Option 4 (Hidden initially) -->
            <EditText
                android:id="@+id/option4Input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_chat_input"
                android:hint="@string/poll_option_4_hint"
                android:padding="12dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#808080"
                android:textSize="14sp"
                android:maxLines="1"
                android:singleLine="true"
                android:layout_marginBottom="8dp"
                android:visibility="gone"/>

            <!-- Option 5 (Hidden initially) -->
            <EditText
                android:id="@+id/option5Input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_chat_input"
                android:hint="@string/poll_option_5_hint"
                android:padding="12dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#808080"
                android:textSize="14sp"
                android:maxLines="1"
                android:singleLine="true"
                android:layout_marginBottom="8dp"
                android:visibility="gone"/>

            <!-- Option 6 (Hidden initially) -->
            <EditText
                android:id="@+id/option6Input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_chat_input"
                android:hint="@string/poll_option_6_hint"
                android:padding="12dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#808080"
                android:textSize="14sp"
                android:maxLines="1"
                android:singleLine="true"
                android:layout_marginBottom="8dp"
                android:visibility="gone"/>

            <!-- Duration Dropdown -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/poll_duration_label"
                android:textColor="#AAAAAA"
                android:textSize="12sp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="6dp"/>

            <Spinner
                android:id="@+id/durationSpinner"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_chat_input"
                android:padding="12dp"
                android:popupBackground="#1A1A1A"
                android:layout_marginBottom="12dp"/>

            <!-- Result Display Duration Dropdown -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/poll_result_duration_label"
                android:textColor="#AAAAAA"
                android:textSize="12sp"
                android:layout_marginBottom="6dp"/>

            <Spinner
                android:id="@+id/resultDurationSpinner"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_chat_input"
                android:padding="12dp"
                android:popupBackground="#1A1A1A"
                android:layout_marginBottom="16dp"/>

        </LinearLayout>
    </ScrollView>

    <!-- Create Button -->
    <Button
        android:id="@+id/btnCreatePoll"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:backgroundTint="#53FC18"
        android:text="@string/create_poll"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"/>

    <!-- Error Text -->
    <TextView
        android:id="@+id/errorText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="8dp"
        android:textColor="#FF6B6B"
        android:textSize="13sp"
        android:visibility="gone"/>

</LinearLayout>
