<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    android:paddingTop="12dp">

    <!-- Top Handle -->
    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:background="#333333"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mod_search_category"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="12dp" />

    <!-- Popular Categories -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/popular_categories_label"
        android:textColor="#888888"
        android:textSize="12sp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="8dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/popularCategoriesRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:clipToPadding="false"
        android:layout_marginBottom="12dp" />

    <!-- Recent Categories -->
    <TextView
        android:id="@+id/recentCategoriesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/recent_categories_label"
        android:textColor="#888888"
        android:textSize="12sp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recentCategoriesRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:clipToPadding="false"
        android:layout_marginBottom="16dp"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#1A1A1A" />

    <!-- Results -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/categoryResultsRecycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:clipToPadding="false" />

        <ProgressBar
            android:id="@+id/searchLoading"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:indeterminateTint="@color/brand_green"
            android:visibility="gone" />
            
        <TextView
            android:id="@+id/emptyResultsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/no_results_found"
            android:textColor="#444444"
            android:visibility="gone" />
    </FrameLayout>

    <!-- Search Box at bottom -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#111111"
        android:gravity="center_vertical">
        
        <EditText
            android:id="@+id/categorySearchInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/search_categories_hint"
            android:textColor="#FFFFFF"
            android:textColorHint="#555555"
            android:background="@drawable/bg_search_input_modern"
            android:padding="12dp"
            android:maxLines="1"
            android:singleLine="true"
            android:imeOptions="actionSearch" />
            
        <ImageView
            android:id="@+id/btnClearSearch"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@drawable/ic_close"
            android:tint="#888888"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>
