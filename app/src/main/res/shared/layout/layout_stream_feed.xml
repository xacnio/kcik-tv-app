<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/feedContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Content Wrapper - will be constrained on tablet/portrait -->
    <FrameLayout
        android:id="@+id/feedContentWrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <!-- Vertical ViewPager for swipe navigation -->
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/feedViewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" />

        <!-- Scale Toggle Button (Top Right) -->
        <ImageView
            android:id="@+id/ivScaleType"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp"
            android:layout_gravity="top|end"
            android:src="@drawable/ic_fullscreen"
            android:padding="10dp"
            app:tint="#FFFFFF"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <!-- Filter Header (Top Left) -->
        <LinearLayout
            android:id="@+id/headerFilterContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:layout_gravity="top|start"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            android:padding="8dp">

            <TextView
                android:id="@+id/headerFilterText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sort_title_featured"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="18sp"
                android:shadowColor="#80000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2" />

            <ImageView
                android:id="@+id/headerFilterIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="4dp"
                android:src="@drawable/ic_chevron_down"
                app:tint="#AAAAAA" />
        </LinearLayout>
    </FrameLayout>

    <!-- Loading Overlay -->
    <FrameLayout
        android:id="@+id/feedLoadingOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CC000000"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:indeterminateTint="#53FC18" />
    </FrameLayout>

</FrameLayout>
