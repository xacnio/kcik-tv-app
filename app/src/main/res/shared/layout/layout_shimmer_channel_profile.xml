<?xml version="1.0" encoding="utf-8"?>
<dev.xacnio.kciktv.shared.ui.widget.ShimmerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/channelProfileShimmer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Banner Shimmer -->
        <View
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="#1A1A1A" />

        <!-- Profile Info Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingTop="12dp">

            <!-- Avatar + Name Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Avatar Shimmer -->
                <View
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="@drawable/circle_shimmer_bg" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:orientation="vertical">

                    <!-- Name Shimmer -->
                    <View
                        android:layout_width="140dp"
                        android:layout_height="18dp"
                        android:background="#2A2A2A" />

                    <!-- Subtitle Shimmer -->
                    <View
                        android:layout_width="100dp"
                        android:layout_height="14dp"
                        android:layout_marginTop="6dp"
                        android:background="#2A2A2A" />
                </LinearLayout>
            </LinearLayout>

            <!-- Social Links Shimmer -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp">

                <!-- Row 1 (Socials) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <View
                        android:layout_width="100dp"
                        android:layout_height="14dp"
                        android:background="#2A2A2A" />
                    <View
                        android:layout_width="110dp"
                        android:layout_height="14dp"
                        android:layout_marginStart="24dp"
                        android:background="#2A2A2A" />
                </LinearLayout>

                <!-- Row 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">
                    <View
                        android:layout_width="90dp"
                        android:layout_height="14dp"
                        android:background="#2A2A2A" />
                    <View
                        android:layout_width="120dp"
                        android:layout_height="14dp"
                        android:layout_marginStart="24dp"
                        android:background="#2A2A2A" />
                </LinearLayout>
            </LinearLayout>

            <!-- Featured Stream Card Shimmer -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:background="#1A1A1A"
                android:padding="0dp">
                
                <!-- Thumbnail -->
                <View
                    android:layout_width="160dp"
                    android:layout_height="90dp"
                    android:background="#2A2A2A" />
                    
                <!-- Info -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:paddingVertical="8dp">
                    
                    <View
                        android:layout_width="140dp"
                        android:layout_height="12dp"
                        android:background="#2A2A2A" />
                        
                    <View
                        android:layout_width="100dp"
                        android:layout_height="12dp"
                        android:layout_marginTop="8dp"
                        android:background="#2A2A2A" />
                        
                    <LinearLayout 
                        android:layout_width="wrap_content" 
                        android:layout_height="wrap_content" 
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">

                        <View
                            android:layout_width="50dp"
                            android:layout_height="10dp"
                            android:background="#2A2A2A" />
                        <View
                            android:layout_width="40dp"
                            android:layout_height="10dp"
                            android:layout_marginStart="8dp"
                            android:background="#2A2A2A" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Follow Button Shimmer -->
            <View
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:background="#2A2A2A" />

            <!-- Tabs Shimmer -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                
                <View
                    android:layout_width="80dp"
                    android:layout_height="10dp"
                    android:background="#2A2A2A" />

                <View
                    android:layout_width="80dp"
                    android:layout_height="10dp"
                    android:layout_marginStart="32dp"
                    android:background="#2A2A2A" />

                <View
                    android:layout_width="70dp"
                    android:layout_height="10dp"
                    android:layout_marginStart="32dp"
                    android:background="#2A2A2A" />
                
                <View
                    android:layout_width="60dp"
                    android:layout_height="10dp"
                    android:layout_marginStart="32dp"
                    android:background="#2A2A2A" />
            </LinearLayout>
        </LinearLayout>

        <!-- Videos Section Shimmer -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp">

            <!-- Section Header -->
            <View
                android:layout_width="120dp"
                android:layout_height="18dp"
                android:layout_marginHorizontal="16dp"
                android:background="#2A2A2A" />

            <!-- Videos Row -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:scrollbars="none"
                android:clipToPadding="false"
                android:paddingHorizontal="12dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Video Card 1 -->
                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:orientation="vertical"
                        android:background="#1A1A1A">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="112dp"
                            android:background="#2A2A2A" />

                        <View
                            android:layout_width="140dp"
                            android:layout_height="14dp"
                            android:layout_margin="10dp"
                            android:background="#2A2A2A" />

                        <View
                            android:layout_width="100dp"
                            android:layout_height="12dp"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="#2A2A2A" />
                    </LinearLayout>

                    <!-- Video Card 2 -->
                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:orientation="vertical"
                        android:background="#1A1A1A">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="112dp"
                            android:background="#2A2A2A" />

                        <View
                            android:layout_width="140dp"
                            android:layout_height="14dp"
                            android:layout_margin="10dp"
                            android:background="#2A2A2A" />

                        <View
                            android:layout_width="100dp"
                            android:layout_height="12dp"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="#2A2A2A" />
                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>

        <!-- Clips Section Shimmer -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp">

            <!-- Section Header -->
            <View
                android:layout_width="120dp"
                android:layout_height="18dp"
                android:layout_marginHorizontal="16dp"
                android:background="#2A2A2A" />

            <!-- Clips Row -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:scrollbars="none"
                android:clipToPadding="false"
                android:paddingHorizontal="12dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Clip Card 1 -->
                    <LinearLayout
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:orientation="vertical"
                        android:background="#1A1A1A">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:background="#2A2A2A" />

                        <View
                            android:layout_width="120dp"
                            android:layout_height="14dp"
                            android:layout_margin="10dp"
                            android:background="#2A2A2A" />

                        <View
                            android:layout_width="80dp"
                            android:layout_height="12dp"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="#2A2A2A" />
                    </LinearLayout>

                    <!-- Clip Card 2 -->
                    <LinearLayout
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:orientation="vertical"
                        android:background="#1A1A1A">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:background="#2A2A2A" />

                        <View
                            android:layout_width="120dp"
                            android:layout_height="14dp"
                            android:layout_margin="10dp"
                            android:background="#2A2A2A" />

                        <View
                            android:layout_width="80dp"
                            android:layout_height="12dp"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="#2A2A2A" />
                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
    </LinearLayout>
</dev.xacnio.kciktv.shared.ui.widget.ShimmerLayout>
