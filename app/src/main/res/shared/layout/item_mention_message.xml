<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    android:paddingVertical="12dp">

    <!-- Header: Username + Time -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/senderUsername"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#53FC18"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="senderUsername" />

        <TextView
            android:id="@+id/messageTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#888888"
            android:textSize="12sp"
            tools:text="messageTime" />
    </LinearLayout>
    
    <!-- Reply Content (Visible if it's a reply) -->
    <TextView
        android:id="@+id/replyContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:textColor="#999999"
        android:textSize="12sp"
        android:visibility="gone"
        tools:text="↪ replyContent"
        tools:visibility="visible" />

    <!-- Message Content -->
    <TextView
        android:id="@+id/messageContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        tools:text="@Xacnio merhaba nasılsın?" />

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="end"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/replyButton"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="@string/reply"
            android:textColor="#53FC18"
            android:textSize="12sp"
            app:icon="@drawable/ic_reply"
            app:iconSize="16dp"
            app:iconTint="#53FC18" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/goToMessageButton"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="@string/go_to_message"
            android:textColor="#888888"
            android:textSize="12sp"
            app:icon="@drawable/ic_chevron_down"
            app:iconSize="16dp"
            app:iconTint="#888888" />
    </LinearLayout>

</LinearLayout>
