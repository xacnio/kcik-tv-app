<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <!-- Row for K C I K letters -->
    <!-- ConstraintLayout ensures animations won't shift other letters -->
    
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textK1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/brand_logo_font"
        app:fontFamily="@font/brand_logo_font"
        android:text="K"
        android:textColor="#53FC18"
        android:textSize="100sp"
        android:scaleX="-1"
        android:includeFontPadding="false"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textC"
        app:layout_constraintHorizontal_chainStyle="packed" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/brand_logo_font"
        app:fontFamily="@font/brand_logo_font"
        android:text="C"
        android:textColor="#53FC18"
        android:textSize="100sp"
        android:layout_marginStart="8dp"
        android:includeFontPadding="false"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textK1"
        app:layout_constraintEnd_toStartOf="@+id/textI" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/brand_logo_font"
        app:fontFamily="@font/brand_logo_font"
        android:text="I"
        android:textColor="#53FC18"
        android:textSize="100sp"
        android:layout_marginStart="8dp"
        android:includeFontPadding="false"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textC"
        app:layout_constraintEnd_toStartOf="@+id/textK2" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textK2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/brand_logo_font"
        app:fontFamily="@font/brand_logo_font"
        android:text="K"
        android:textColor="#53FC18"
        android:textSize="100sp"
        android:layout_marginStart="8dp"
        android:includeFontPadding="false"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textI"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
