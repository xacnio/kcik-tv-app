<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatRadioButton
        android:id="@+id/optionRadioButton"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@drawable/bg_prediction_option"
        android:button="@null"
        android:paddingHorizontal="12dp"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold"
        android:clickable="false"
        android:focusable="false"
        android:ellipsize="end"
        android:maxLines="1"
        tools:text="optionRadioButton" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/pointsIcon"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/ic_loyalty"
            app:tint="#53FC18" />

        <TextView
            android:id="@+id/totalPointsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:textColor="#FFFFFF"
            android:textSize="11sp"
            tools:text="totalPointsText" />

        <TextView
            android:id="@+id/multiplierText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:textColor="#CCCCCC"
            android:textSize="11sp"
            tools:text="multiplierText" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/userStatsContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:background="@drawable/bg_prediction_user_stats"
        android:paddingVertical="4dp"
        android:paddingHorizontal="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/ic_loyalty"
            app:tint="#CCCCCC" />

        <TextView
            android:id="@+id/userSpentText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:textStyle="bold"
            tools:text="userSpentText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="6dp"
            android:text="@string/arrow_right_symbol"
            android:textColor="#888888"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/ic_loyalty"
            app:tint="#FFC107" />

        <TextView
            android:id="@+id/potentialWinText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:textColor="#FFC107"
            android:textSize="12sp"
            android:textStyle="bold"
            tools:text="potentialWinText" />
    </LinearLayout>
    
    <!-- Top Users Row -->
    <LinearLayout
        android:id="@+id/topUsersContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="visible">
        
        <ImageView
            android:id="@+id/topUsersIcon"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/ic_check"
            app:tint="#53FC18" />
        
        <TextView
            android:id="@+id/topUsersText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:textColor="#53FC18"
            android:textSize="10sp"
            android:maxLines="2"
            android:ellipsize="end"
            tools:text="topUsersText" />
    </LinearLayout>

</LinearLayout>
