<?xml version="1.0" encoding="utf-8"?>
<!-- Outer wrapper for margin when used in weighted layout -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_home_card">

        <!-- Thumbnail Container 16:9 with rounded top corners -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/thumbShimmer"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/bg_thumbnail_top_rounded"
                app:layout_constraintDimensionRatio="H,16:9"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Duration Badge Shimmer -->
            <View
                android:layout_width="32dp"
                android:layout_height="16dp"
                android:layout_margin="8dp"
                android:background="#444444"
                app:layout_constraintBottom_toBottomOf="@id/thumbShimmer"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Channel Info Shimmer -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="12dp"
            android:gravity="top">
            
            <!-- Avatar Shimmer (32dp circle) -->
            <View
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/bg_circle_placeholder" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:orientation="vertical">

                <!-- Channel Name Shimmer -->
                <View
                    android:layout_width="90dp"
                    android:layout_height="13dp"
                    android:background="#2A2A2A" />

                <!-- Title Shimmer -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:layout_marginTop="4dp"
                    android:background="#2A2A2A" />

                <!-- Stats Shimmer -->
                <View
                    android:layout_width="140dp"
                    android:layout_height="11dp"
                    android:layout_marginTop="4dp"
                    android:background="#1F1F1F" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
